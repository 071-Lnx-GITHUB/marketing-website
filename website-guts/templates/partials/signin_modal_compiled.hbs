<div id="sign-in-dialog" class="modal-dialog-container" data-optly-modal="signin">
    <div class="dialog narrow">
        <form action="/account/signin" method="POST" autocomplete="off">
            
            <div class="modal-header">
                <p class="normal-header header-h1">Sign in to Optimizely</p>
                
            </div><!--/.modal-header-->
            
            <div class="modal-body">
                
              <label>
                  <span>Email address</span>
                  <input type="text" name="email" />
              </label>
              <label>
                  <span>Password</span>
                  <input type="password" name="password" />
              </label>
              <div class="terms">
                  <label class="spaced">
                      <input type="checkbox" name="persist" checked="checked" />
                      <p>Keep me signed in</p>
                  </label>
              </div>
              <div class="options">
                  <p>
                      <a class="show-forgot-password">Forgot your password?</a><br />
                      No account? <a class="show-create-account" data-modal-click="signup">Register here</a>
                  </p>
              </div>

            </div><!--/.modal-body-->
            <div class="modal-footer no-negative-btn">
                <input type="submit" class="primary-button submit-btn translate" value="Sign in &raquo;">
                
            </div><!--/.modal-footer-->
        </form>
    </div><!--/.dialog.narrow-->
</div> <!-- end .modal-dialog-container -->
