---
layout: wrapper.hbs
---
<div id="main">
    <div id="page-header">
        <div class="container">
            <div class="clearfix page-subheader-cont">
                <h1>
                    {{#if page.optimizely_for}}<span class="super">Optimizely for</span>{{/if}}
                    {{page.visible_title}}
                </h1>
                <ul class="sub-header-nav">
                    <li><a href="/pricing" class="">Plans and Pricing</a></li>
                    <li><a href="/benefits" class="current">Benefits</a></li>
                    <li class="dropdown SL_hide">
                        <span class="for-menu-label">Optimizely for: </span>
                        <ul class="for-menu">
                            {{#if page.first_menu_item}}<li><a>{{page.first_menu_item}}</a></li>{{else}}<li><a>{{page.visible_title}}</a></li>{{/if}}
                            {{#menu_items}}
                            <li><a href="{{url}}">{{name}}</a></li>
                            {{/menu_items}}
                        </ul>
                    </li>
                </ul>            
            </div><!---->
        </div><!--/.container-->
    </div><!--/#page-header-->
    <div id="page-header-gradient"></div>
    <div id="page-content">
        {{#unless page.no_container}}<div class="container row">{{/unless}}
        <h2 class="subheading">{{ page.subheading }}</h2>
        <div class="row">
            <div class="columns seven">
                {{> body }}
            </div>
            <div class="columns five">
                {{> contact_form }}
            </div>
        </div>
        <div class="attention center-desktop row">
            <h3>Your improved site awaits <a href="/pricing" class="primary-button">View Plans &amp; Pricing</a></h3>
        </div>
        {{#unless page.no_container}}</div><!--/.container-->{{/unless}}
    </div><!--/#content-->
</div><!--/#main-->
