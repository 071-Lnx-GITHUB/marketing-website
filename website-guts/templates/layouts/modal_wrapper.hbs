<div id="{{page.wrapper_id}}" class="modal-dialog-container" data-optly-modal="{{ page.data_attr_value }}">
    {{#if page.form_action}}<form action="{{page.form_action}}" method="POST" autocomplete="off">{{/if}}
    <div class="dialog narrow">
        {{#if page.modal_title}}
        <div class="modal-header">
            <p class="normal-header header-h1">{{page.modal_title}}</p>
            {{#if page.modal_sub_header}}<p>{{page.modal_sub_header}}</p>{{/if}}
        </div><!--/.modal-header-->
        {{/if}}
        <div class="modal-body">
        {{> body }}
        </div><!--/.modal-body-->
        <div class="modal-footer{{#unless page.negative_button_text}} no-negative-btn{{/unless}}">
            {{#if page.primary_button_text}}<input type="submit" class="primary-button submit-btn translate" value="{{page.primary_button_text}} &raquo;">{{/if}}
            {{#if page.negative_button_text}}<input type="button" data-modal-btn="close" class="secondary-button close-btn translate" value="{{page.negative_button_text}}">{{/if}}
        </div>
    </div><!--/.dialog.narrow-->
    {{#if page.form_action}}</form>{{/if}}
</div> <!-- end .modal-dialog-container -->
