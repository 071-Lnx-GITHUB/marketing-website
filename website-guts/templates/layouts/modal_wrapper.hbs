<div id="{{page.wrapper_id}}" class="modal-dialog-container{{#if page.wrapper_class}} {{page.wrapper_class}}{{/if}} optly-hide" data-optly-modal="{{ page.data_modal_id }}" data-modal-name="{{ page.data_modal_name }}">
  <div {{#if page.dialog_id}}id="{{page.dialog_id}}"{{/if}}class="dialog narrow">
      <form novalidate autocomplete="off"{{#if page.form_id}} id="{{page.form_id}}"{{/if}}{{#if page.form_action}} action="{{#if page.api_domain}}{{apiDomain}}{{/if}}{{page.form_action}}"{{/if}}{{#if page.form_method}} method="{{page.form_method}}"{{/if}}>
            <div class="modal-header">
              {{#if page.modal_title}}<p class="normal-header header-h1">{{page.modal_title}}</p>{{/if}}
              {{#if page.modal_sub_header}}<p>{{page.modal_sub_header}}</p>{{/if}}
            </div><!--/.modal-header-->
            <div class="modal-body">
                {{> body }}
            </div><!--/.modal-body-->
            <div class="modal-footer{{#unless page.primary_button_text}} no-primary-button{{/unless}}">
                {{#if page.primary_button_text}}
                <button type="submit" class="primary-button submit-btn translate">{{page.primary_button_text}} &raquo;</button>
                {{/if}}
                {{#if page.hidden_button_text}}
                <button type="button" data-modal-btn="{{page.hidden_button_action}}" class="{{#if page.hide}}hide-button {{/if}}right-button secondary-button close-btn jqmClose translate">{{page.hidden_button_text}}</button>
                {{/if}}
                {{#if page.negative_button_text}}
                <button type="button" data-modal-btn="{{#unless page.negative_button_action}}close{{/unless}}{{page.negative_button_action}}" class="secondary-button close-btn jqmClose translate">{{page.negative_button_text}}</button>
                {{/if}}
            </div><!--/.modal-footer-->
            {{#if page.initial_form_source}}<input type="hidden" name="Initial_Form_Source__c" value="{{page.initial_form_source}}">{{/if}}
        </form>
    </div><!--/.dialog.narrow-->
</div> <!-- end .modal-dialog-container -->
