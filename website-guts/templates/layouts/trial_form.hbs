---
layout: wrapper
layout_script: trial-form.js
layout_body_class:
- trial-form-layout
---
<div id="main">
  <div class="header-wrapper">
    {{#if this.page_header}}
    <div id="page-header">
      <div class="container">
        {{#if this.visible_title}}<h1>{{this.visible_title}}</h1>{{/if}}
        {{#if this.sub_head}}<p>{{this.sub_head}}</p>{{/if}}
      </div><!--/.container-->
    </div><!--/#page-header-->
    {{/if}}
    <div class="container">
      <div class="row">
        <div class="columns six hero-left-cont">
          <img src="{{assetsDir}}/img/ppc/ppc.png">
          {{#if this.social_proof}}
          <div id="social-proof-cont">
              <div class="social-numbers visitors-tested-cont">
                <p class="social-number" id="visitors-tested-number">1,306,200,329</p>
                <p class="description">{{tr 'Visitors tested'}}</p>
              </div>
              <div class="social-numbers experiments-run-cont">
                <p class="social-number" id="experiments-run-number">100,329</p>
                <p class="description">{{tr 'Experiments run'}}</p>
              </div>
          </div>
          {{/if}}
        </div>
        <div class="columns six ppc-form-cont">
          <div id="ppc-form" class="landing-page-form">
            {{#if this.form_header}}
            <h4 class="seo-form-heading">{{this.form_header}}</h4>
            {{/if}}
            <p class="seo-form-subheader">{{{this.form_text}}}</p>
            <form id="seo-form" method="POST" class="seo-form inline-labels" action="{{apiDomain}}/account/free_trial_create" autocomplete="off" novalidate="novalidate">
              <p class="error-message oform-error-show"></p>
              <input id="utm_medium" type="hidden" name="utm_medium" value="">
              <input id="hidden" type="hidden" name="hidden" value="">
              <ul>
                <li class="url-input-related">
                  <label for="url">{{tr 'Type in a URL to try it out'}}</label>
                  <input id="url" required name="url-input" type="url">
                </li>
                <li class="name-related">
                  <label for="name">{{tr 'Your Name'}}</label>
                  <input id="name" required data-validation="name" name="name" type="text">
                </li>
                <li id="phone-email-cont">
                  <div class="label half left email-related">
                    <label for="email">{{tr 'Email - no spam'}}</label>
                    <input id="email" required name="email" type="email">
                  </div>

                  <div class="label half right phone_number-related">
                    <label for="phone">{{tr 'Phone Number'}}</label>
                    <input id="phone" name="phone_number" type="tel">
                  </div>
                </li>
                <li class="terms">
                <small>{{{tr 'By clicking the <q>Test it Out</q> button below I agree to the <br><a href="{0}/terms" target="_blank">Terms of Service</a> and <a href="{0}/privacy" target="_blank">Privacy Policy</a>.' linkPath}}}</small>
                </li>
                <li class="a-center">
                  <button type="submit" id="submit" class="button oform-processing-hide">{{tr 'Test it Out'}}</button>
                  <p class="oform-processing-show">{{tr 'Processing...'}}</p>
                </li>
              </ul>
              <input type="hidden" name="Initial_Form_Source__c" value="Free Trial PPC">
              <input type="hidden" name="Inbound_Lead_Form_Type__c" value="Free Trial Signup Form">
            </form>
          </div><!--/#ppc-form-->
        </div>
      </div><!--/.row-->
    </div>
  </div><!--/.header-wrapper-->
  {% body %}
  <div class="seo-customers container">
    <div class="row">
      <div class="columns four">
        <h4>{{{tr 'Happy Customers <br>testing with Optimizely'}}}</h4>
      </div>
      <div class="columns eight SL_swap" id="seo-customer-images">
        <img src="{{assetsDir}}/img/resources/free-trial-logos-bw.png" alt="{{tr 'Happy customer logos'}}" />
      </div>
    </div>
  </div>
</div><!--/#main-->
