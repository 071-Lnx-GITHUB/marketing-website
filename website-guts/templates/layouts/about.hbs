---
layout: wrapper.hbs
layout_script: false
layout_body_class: false
---
<div id="main">
	<div id="page-header">
		<div class="container">
			<div class="clearfix page-subheader-cont">
				<h1>{{page.visible_title}}</h1>
				<ul class="sub-header-nav">
					<li class="sub-nav-about"><a href="{{linkPath}}/about">{{tr 'About'}}</a></li>
					<li class="sub-nav-"><a href="{{linkPath}}/jobs">{{tr 'Jobs'}}</a></li>
					<li class="sub-nav-"><a href="{{linkPath}}/press">{{tr 'Press'}}</a></li>
					<li class="sub-nav-"><a href="{{linkPath}}/events">{{tr 'Events'}}</a></li>
					<li class="sub-nav-"><a href="{{linkPath}}/contact">{{tr 'Contact'}}</a></li>
				</ul>
			</div><!---->
		</div><!--/.container-->
	</div><!--/#page-header-->
	<div id="page-header-gradient"></div>
	<div id="page-content">
		{{#unless page.no_container}}<div class="container">{{/unless}}
			{{> body }}
		{{#unless page.no_container}}</div><!--/.container-->{{/unless}}
	</div><!--/#content-->
</div><!--/#main-->
