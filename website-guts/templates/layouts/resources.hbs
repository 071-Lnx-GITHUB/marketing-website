---
layout: wrapper.hbs
layout_script: false
layout_body_class: false
---
<div id="main">
  <div id="page-header">
    <div class="container header-cont">
      <div class="page-title">
        <h1>{{page.visible_title}}</h1>
        <div class="sub-head">{{page.sub_head}}</div>
      </div><!---->
    </div><!--/.container-->
  </div><!--/#page-header-->
  <div id="page-header-gradient"></div>
  <div id="page-content">
    {{#unless page.no_container}}<div class="container">{{/unless}}
      <div class="pill container">
        <div class="heading">{{resources-page.filter.title}}:</div>
        <div class="dropdown-cont">
          <div class="selected-option">{{resources-page.filter.filter_options.[0]}} &#9662;</div>
          <ul>
            {{#each resources-page.filter.filter_options}}
              <li class="filter-item" data-filter="{{ createClassList this }}">{{this}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
      {{> body }}
    {{#unless page.no_container}}</div><!--/.container-->{{/unless}}
  </div><!--/#content-->
</div><!--/#main-->
