---
layout: wrapper
layout_script: false
layout_body_class: false
---
<div id="main">
  <div class="page-header">
    <div class="container header-cont">
      <div id="resources-page-title">
        <h1>{{this.visible_title}}</h1>
        <div class="sub-head">{{this.sub_head}}</div>
      </div><!---->
    </div><!--/.container-->
  </div><!--/#page-header-->
  <div id="page-header-gradient"></div>
  <div id="page-content">
    {{#unless this.no_container}}<div class="container">{{/unless}}
      <div class="pill container">
        <div class="heading">{{page_data.filter.dropdown_label}}:</div>
        <div class="dropdown-cont">
          <div class="selected-option">{{page_data.filter.filter_options.[0].name}} &#9662;</div>
          <ul>
            {{#each page_data.filter.filter_options}}
              <li class="filter-item" data-filter="{{this.attr}}">{{this.name}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
      {% body %}
    {{#unless this.no_container}}</div><!--/.container-->{{/unless}}
  </div><!--/#content-->
</div><!--/#main-->
