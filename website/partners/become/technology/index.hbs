<style>

</style>
<section id="technology-hero" class="panel hero">
  {{#with page_data.intro}}
    <h1>{{{headline}}}</h1>
    <h2>{{{subhead}}}</h2>
  {{/with}}
</section>

<section id="technology-blurb" class="panel">
  {{#with page_data.intro}}
    {{{blurb}}}
  {{/with}}
</section>

<section id="technology-why" class="panel">

  <section class="why-items container">
    <h3 class="description-title adelle-sans">{{why.items.title}}</h3>
    <p class="description-text description-text--center adelle-sans">{{why.items.description}}</p>
    <div class="tracks-container flex-container">
      {{#each why.items.list}}
        <div class="track-container {{this.class}}">
          <p class="item-title adelle-sans--bold">{{this.title}}</p>
          <p class="detail-text adelle-sans">{{this.blurb}}</p>
        </div>
      {{/each}}
    </div>
    <a class="opticon-button opticon-button--internal-link blue-hover" href="{{../linkPath}}/opticon/agenda">
      <div class="cta-text adelle-sans">{{why.items.cta}}</div>
    </a>
    <p class="adelle-sans">{{why.items.2014_text}}<a href="{{../linkPath}}/opticon/opticon-2014">{{why.items.2014_link}} &raquo;</a></p>

  </section>

</section>

