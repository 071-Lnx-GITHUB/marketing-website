<div id="top">
  <div class="container">
    <header class="clearfix ios-logo-cont">
      <p class="logo"><a href="/">Optimizely</a></p>
    </header>
  </div>
  <section id="hero">
    <h1>{{page.hero.header}}</h1>
    <h2>{{page.hero.sub_header}}</h2>
    {{!-- <a href="https://www.youtube.com/watch?v=EhuGaDJXqFI" id="video">Watch video</a> --}}
