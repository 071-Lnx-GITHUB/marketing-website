---
layout: about.hbs
no_container: true
seo_title: Press
visible_title: Press
body_class:
- press-page
---
<div class="sheet">
	<h4 class="sheet-headline" id="press-intro">{{{press.page_intro}}}</h4>
	<div>
		<article id="press-mentions">
			<h3>{{press.left_column_header}}</h3>
			{{#each press_mentions.items}}
			<div class="press-feed-item">
				<img src="{{logoUrl}}">
				<time datetime="{{formatDate storyDate "%Y-%m-%d"}}">{{formatDate storyDate "%b. %Y"}}</time>
				<h4 class="press-article-headline"><a href="{{linkToStory}}">{{storyTitle}}</a></h4>
		    </div><!--/.press-feed-item-->
		    {{/each}}
		</article><!--/#press-mentions-->
		<aside id="press-info">
			{{#if press.press_kit_header}}
			<div id="press-kit">
				<h3 class="heading-underline">{{press.press_kit_header}}</h3>
				{{#each press.press_kit_items}}
				<p>{{{.}}}</p>
				{{/each}}
			</div><!--/#press-kit-->
			{{/if}}
			{{#if press.press_releases_header}}
			<div id="press-releases">
				<h3>{{press.press_releases_header}}</h3>
				<ul>
					{{#each press_releases.items}}
					<li>
						<time datetime="{{formatDate releaseDate "%Y-%m-%d"}}">{{formatDate releaseDate "%b %Y"}}</time>
						<p><a href="{{linkToRelease}}" target="_blank">{{releaseTitle}}</a></p>
					</li>
					{{/each}}
				</ul>
			</div>
			{{/if}}
			{{#if press.press_inquiries_header}}
			<div id="press-inquiries">
				<h3>{{press.press_inquiries_header}}</h3>
				<p>{{{press.press_inquiries_body}}}</p>
			</div>
			{{/if}}
			{{#if press.company_information_header}}
			<div id="company-information">
				<h3>{{press.company_information_header}}</h3>
				<p><strong>Location:</strong>{{#each company_info.locations}}<br>{{.}}{{/each}}</p>
				<p><strong>Founded:</strong> {{company_info.founded}}</p>
				<p><strong>Size:</strong> {{company_info.employee_count}}</p>
				<h3>Investors</h3>
				<p><strong>Venture:</strong> {{#each company_info.venture}}{{.}}, {{/each}}</p>
				<p><strong>Angels:</strong> {{#each company_info.angels}}{{.}}, {{/each}}</p>
			</div>
			{{/if}}
			{{#if press.blog_header}}
			<div id="optimizely-blog">
				<h3>{{press.blog_header}}</h3>
				<p>{{{press.blog_body}}}</p>
			</div>
			{{/if}}
		</aside><!--/#press-info-->
	</div><!--/#press-content-->
	{{#if press.follow_the_latest}}
	<div id="follow-latest">
		<p>{{press.follow_the_latest}}</p>
		<ul>
			{{#each press.follow_the_latest_items}}
			<li>{{{.}}}</li>
			{{/each}}
		</ul>
	</div>
	{{/if}}
</div><!--/.sheet-->
