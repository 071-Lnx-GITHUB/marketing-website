---
layout: no-sub-nav-optional-page-header.hbs
visible_title: Features and Plans
body_class:
- features-and-plans
no_container: true
page_header: false
page_script: features-and-plans.js
modals:
- contact_sales_thank_you_compiled
- downgrade_plan_compiled
- downgrade_plan_confirm_compiled
- pricing_plan_signup_thank_you_compiled
seo_title: Features and Plans
og_title:
- "Features and Plans"
og_description:
- "Get started optimizing instantly, or build a custom plan for your business."
---

<!--           -->
<!--Page Header-->
<!--           -->
<div id="page-header">
  <div class="container">
    <div class="page-subheader-cont">
      <h1>{{page.visible_title}}</h1>
      <div class="header-cta-container">
        {{#with features.page_header}}
        <a class="talk-button" id="talk-to-us" href="#">{{cta}}</a>
        <p>{{or_word}}</p>
        <p id="SL-pricing-phone-number-1" class="SL_swap">
        US: <a href="tel:{{us_phone_number}}">{{us_phone_number}}</a><br>
        UK: <a href="tel:{{uk_phone_number}}">{{uk_phone_number}}</a>
        </p>
        {{/with}}
      </div>
    </div>
  </div>
</div>


<!--             -->
<!--Title Section-->
<!--             -->
{{#with features.title_section}}
<section class="title-section">
  <h1 class="title-copy">{{{title}}}</h1>
  <div class="buttons-container">
    <a class="learn-cta" id="learn-cta" href="#benefits"><span>{{learn_cta}}</span></a>
    <a class="plans-cta" id="plans-cta" href="#enterprise">{{plans_cta}}</a>
  </div>
</section>
{{/with}}


<!--                -->
<!--Benefits Section-->
<!--                -->
{{#with features.benefits_section}}
<section class="benefits-section" id="benefits">
  <h2 class="title-copy">{{title}}</h2>
  <div class="benefit-items-container container">
    {{#each benefits}}
    <div class="benefit-item four" style="background-image: url('{{icon}}')">
      <h3>{{title}}</h3>
      <p{{#is @index 1}} id="powerful-pricing-text" class="SL_swap"{{/is}}>{{desc}}</p>
    </div>
    {{/each}}
  </div>
  <p class="asterisk SL_hide">{{asterisk}}</p>
</section>
{{/with}}


<!--                -->
<!--Feature Sections-->
<!--                -->
{{#with features}}
  {{#each feature_sections}}
    {{#is_even @index}}
    <section class="feature-section even">
    {{else}}
    <section class="feature-section odd">
    {{/is_even}}
    <div class="container">
      <div class="description-container" style="background-image: url('{{icon}}')">
        <h2>{{title}}</h2>
        <p>{{desc}}</p>
      </div>
      <div class="features-container">
        <h4>Features:</h4>
        <ul>
          {{#each this.features}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
    </section>
  {{/each}}
{{/with}}

<!--               -->
<!--Companies Panel-->
<!--               -->
{{> companies_panel}}


<!--                  -->
<!--Enterprise Section-->
<!--                  -->
{{#with features}}
<section class="enterprise-section" id="enterprise">
  <h2 class="title-copy">{{enterprise_section.title}}</h2>
  <p class="subtitle">{{enterprise_section.subtitle}}</p>
  <p class="current-plan-message">{{current_plan_message}}</p>
  <div class="button-container">
    <a class="cta" id="enterprise-cta" href="#">{{enterprise_section.cta}}</a>
  </div>
  <p>{{{enterprise_section.feature_cta}}}</p>
</section>
{{/with}}


<!--               -->
<!--Starter Section-->
<!--               -->
{{#with features}}
<section class="starter-section" id="starter-cta-cont">
  <h2 class="title-copy">{{starter_section.title}}</h2>
  <p class="subtitle">{{{starter_section.subtitle}}}</p>
  <div class="button-container">
    <a class="cta" id="starter-cta" href="#">{{starter_section.cta}}</a>
  </div>
  <p class="current-plan-message">{{current_plan_message}}</p>
</section>
{{/with}}

<!--           -->
<!--FAQ Section-->
<!--           -->
{{> faq_section}}
