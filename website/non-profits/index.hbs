---
layout: non_profits.hbs
seo_title: Optimizely.org
compact_header: true
external_stylesheets:
- "//cloud.typography.com/7838232/629986/css/fonts.css"
body_class:
- non-profits-page
page_script: non-profits.js
script_dependencies:
- "//cdnjs.cloudflare.com/ajax/libs/skrollr/0.6.27/skrollr.min.js"
---


<section id="panel-1" class="panel bg-img" style="background-image: url('{{assetsDir}}/img/non-profits/{{non_profit_data.panel_1.bg_img}}')">
  <div class="container">
{{#with non_profit_data.panel_1}}
    <h1>{{{header}}}</h1>
    <p>{{text}}</p>
    <a href="#" class="outline-button">{{button_text}}</a>
  </div>
</section>
{{/with}}
<section id="panel-2" class="panel">
  <div class="container">
    <div class="row">
      {{#with non_profit_data.panel_2}}
      <div class="columns six left-content">
        <div class="show-mobile">
          <h3><i>{{header}}</i></h3>
          <h2>{{sub_header}}</h2>
        </div>
      {{/with}}
        <img src="{{assetsDir}}/img/non-profits/{{non_profit_data.panel_2.img}}" />
      </div>
      {{#with non_profit_data.panel_2}}
      <div class="columns six right-content">
        <div class="hide-mobile">
          <h3><i>{{header}}</i></h3>
          <h2>{{sub_header}}</h2>
        </div>
        <p>{{text}}</p>
        <div class="btn-cont">
          <a href="#" >{{button_text}}</a>
          <span class="caret">&rsaquo;<span>
        </div>
      </div>
      {{/with}}
    </div>
  </div>
</section>
<section id="panel-3" class="panel bg-img" style="background-image: url('{{assetsDir}}/img/non-profits/{{non_profit_data.panel_3.bg_img}}')">
  {{#with non_profit_data.panel_3}}
  <div class="container">
    <div class="header-cont">
      <h3><i>{{italic_title}}</i></h3>
      <h2>{{main_title}}</h2>
    </div>
    <p>{{text}}</p>
    <a href="#" class="outline-button">{{button_text}}<span class="circle-arrow"></span></a>
  </div>
  {{/with}}
</section>
<section id="panel-4" class="panel">
  <div class="container">
    <div class="row">
      {{#with non_profit_data.panel_4}}
      <div class="columns five left-content">
        <h3><i>{{header}}</i></h3>
        <h2>{{sub_header}}</h2>
        <p>{{text}}</p>
      </div>
      {{/with}}
      <div class="columns seven right-content">
        <img src="{{assetsDir}}/img/non-profits/{{non_profit_data.panel_4.logo_img}}" />
      </div>
    </div>
  </div>
</section>
<section id="panel-5" class="panel bg-img" style="background-image: url('{{assetsDir}}/img/non-profits/{{non_profit_data.panel_5.bg_img}}')">
  {{#with non_profit_data.panel_5}}
  <div class="container">
    <div class="row">
      <div class="columns six left-content">
        <h2>{{{header}}}</h2>
        <form action="">
          <label for="" class="required">First Name</label>
          <input type="text" name="first-name">
          <label for="" class="required">Last Name</label>
          <input type="text" name="last-name">
          <label for="" class="required">Email Address</label>
          <input type="email" name="email">
          <label for="" class="required">Company Website</label>
          <input type="text" name="website">
          <button type="submit" class="outline-button">{{button_text}}</button>
        </form>
      </div>
      <div class="columns six right-content">
        <p>{{text}}</p>
        <h3>{{sub_text}}</h3>
      </div>
    </div>
  </div>
  {{/with}}
</section>

