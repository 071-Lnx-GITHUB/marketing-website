---
layout: mobile.hbs
seo_title: Make your iOS app more engaging
compact_header: false
modals:
- video_modal_compiled
body_class:
- mobile-page statistics-page
page_script: mobile.js
footer_style: grey
og_title:
- "Make your app more engaging"
og_description:
- "Learn how to optimize your app for acquisition, engagement and retention."
---
<style>

</style>
<section id="hero" class="panel bg-img" style="background-image: url('{{ statistics_data.hero.bg_img }}')">
  {{#with statistics_data.hero}}
  <div id="signup-form-panel-top">
    <h1 class="light">{{{title}}}</h1>
    <h1 class="white">{{{subtitle}}}</h1>
    <a href="#" class="video-link" data-show-video><span class="circle-arrow big"></span></a>
    <div class="learn-more">
      <a href="#section-1">{{{link_anchor_text}}}</a>
      <div>&or;</div>
    </div>
  </div>
  {{/with}}
</section>
{{#with statistics_data.lets_talk}}
<section id="section-1" class="panel blue-bg">
  <div class="container">
    <h3>{{{title}}}</h3>
    <div class="flex-cont">
      <div class="flex-1-content">
        <h2>{{{subtitle}}}</h2>
        {{#omarkdown}}{{{text}}}{{/omarkdown}}
      </div>
      <div class="flex-img-cont">
        <img src="{{img}}">
      </div>
    </div>
    <a href="{{{cta_link}}}" class="secondary-cta">{{{cta_text}}}</a>
  </div>
</section>
{{/with}}
{{#with statistics_data.better_way}}
<section id="" class="panel">
  <div class="container">
    <h3>{{{title}}}</h3>
    <div class="flex-cont">
      <div class="flex-1-content">
        <h2>{{{subtitle}}}</h2>
        {{#omarkdown}}{{{text}}}{{/omarkdown}}
        <a href="{{{cta_link}}}" class="secondary-cta">{{{cta_text}}}</a>
      </div>
      <div class="flex-img-cont">
        <img src="{{img}}">
      </div>
    </div>
  </div>
</section>
{{/with}}
{{#with statistics_data.confidence}}
<section id="section-confidence" class="panel darkblue-bg">
  <div class="container text-center">
    <h3 class="white">{{{title}}}</h3>
    <h2 class="white">{{{subtitle}}}</h2>
    {{#omarkdown}}{{{text}}}{{/omarkdown}}
    <img src="{{{img}}}">
    {{#omarkdown}}{{{text_2}}}{{/omarkdown}}
    <a href="{{{cta_link}}}" class="secondary-cta white">{{{cta_text}}}</a>
  </div>
</section>
{{/with}}
{{#with statistics_data.compare}}
<section id="section-compare" class="panel">
  <div class="container text-center">
    <h2>{{{title}}}</h2>
    <div class="flex-cont">
      {{#each panels}}
      <div class="flex-content comparison comparison-{{{id}}}">
        <h3 class="no-underline">{{{title}}}</h3>
        <p>{{{pre}}}</p>
        <div class="percent">{{{percentage}}}</div>
        <p>{{{post}}}</p>
      </div>
      {{/each}}
    </div>
    <p class="footnote"{{{footnote}}}</p>
    <p>{{{cta_title}}}</p>
    <a href="{{{cta_link}}}" class="secondary-cta">{{{cta_text}}}</a>
  </div>
</section>
{{/with}}
{{#with statistics_data.worry}}
<section id="section-worry" class="panel blue-bg">
  <div class="container text-center">
    <h2>{{{title}}}</h2>

    <div class="flex-cont points">
      {{#each panels}}
      <div class="flex-content point">
        <h3>{{{title}}}</h3>
        <p>{{{text}}}</p>
      </div>
      {{/each}}
    </div>

    <p>{{{cta_title}}}</p>

    <a href="{{{cta_link}}}" class="secondary-cta">{{{cta_text}}}</a>
  </div>
</section>
{{/with}}
{{#with statistics_data.decisions}}
<section id="section-decisions" class="panel">
  <div class="container text-center">
    <h2>{{{title}}}</h2>
    <a href="{{{cta_link}}}" class="primary-cta">{{{cta_text}}}</a>
  </div>
</section>
{{/with}}
