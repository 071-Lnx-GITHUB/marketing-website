---
layout: customers
TR_seo_title: "Customer Stories"
TR_visible_title: "Customer Stories"
no_container: true
subnav_first: "customers"
subnav_last: "customers/customer-stories"
page_script: customer-stories.js
body_class:
- customer-stories-page
---
<div id="customer-stories-content">
  <div class="container">
    <div class="row top-content SL_swap" id="featured-customer-story">
      {{#if page_data.featured_video}}
        <div class="columns two-thirds">
          <div class="video-container">
            <iframe width="100%" height="100%" src="//www.youtube.com/embed/{{page_data.featured_video.youtube_id}}" frameborder="0" allowfullscreen></iframe>
          </div>
        </div><!--/.columns-->
        <div class="columns one-third">
          <h2>{{page_data.featured_video.TR_header}}</h2>
          <p>{{page_data.featured_video.TR_body}}</p>
        </div>
      {{/if}}
    </div><!--/.row-->
  </div>
  <div class="case-studies-bg-container">
    <div class="case-studies-container container">
      {{#each page_data.TR_customer_stories}}
        {{#classgridstart @index 3}}
          <div class="row stories">
        {{/classgridstart}}
            <div class="columns one-third customer-grid-elm">
              <div class="title-container">
                {{{formatPercentHeader TR_header 'percent'}}}
              </div> <!-- .title-container -->
              <div class="customer-inner-content">
                <img src="{{logo_url}}"/>
                <p>{{TR_body}}</p>
                <div class="button-container">
                  <a href="{{download_url}}" target="_blank" class="button small">Download</a>
                </div>
              </div>
            </div> <!-- .customer-grid-elm -->
        {{#classgridfinish @index @last 3}}
          </div>
        {{/classgridfinish}}
      {{/each}}
    </div> <!-- .case-studies-container -->
  </div> <!-- .case-studies-bg-container -->
  {{#if page_data.call_to_action}}
  <div class="case-studies-cta container">
    <div class="callout">
        <h3>{{page_data.call_to_action.TR_header}}</h3>
        <p>{{page_data.call_to_action.TR_body}}</p>
        <!-- TODO: create endpoint -->
        <a href="mailto:content@optimizely.com" class="primary-button">{{page_data.call_to_action.TR_button_text}}</a>
    </div>
  </div>
  {{/if}}
</div><!--#customer-stories-content -->
