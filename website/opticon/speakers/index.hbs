---
layout: opticon.hbs
seo_title: Opticon
no_container: true
no_header: true
page_script: opticon-speakers.js
footer_style: grey
body_class:
- opticon-speakers
external_stylesheets:
- //cloud.typography.com/7838232/736966/css/fonts.css
---

<div class="row">
  <section class="title-container">
    <h1 class="section-title">
      {{speakers_data.page_title}}
    </h1>
    <h4 class="event-details">
      {{opticon_data.date}} | {{opticon_data.location}}
    </h4>
  </section><!-- /.title-container -->

  <section class="details">
    <div class="container">
      <h2 class="section-title">{{speakers_data.details.title}}</h2>
      <p class="details-description">{{speakers_data.details.speaker_description}}</p>
      <div class="tracks">
        {{#each speakers_data.details.tracks}}
          <div class="track-item">
            <h3 class="track-title">{{track_title}}</h3>
            <p class="class-description">{{track_description}}</p>
          </div>
        {{/each}}
      </div><!-- /.tracks -->
    </div><!-- /.container -->
  </section><!-- /.details -->

  <section class="apply">
    <h2 class="section-title">{{speakers_data.apply_section.title}}</h2>
    <p class="apply-subheader">{{speakers_data.apply_section.instructions}}</p>

    <form id="speaker-form" name="form1" method="post" class="container" action="https://stewsmith.wufoo.com/forms/zs0or104f6dyj/#public" novalidate>
      <div class="application-section shared-line">
        <div class="columns five offset-one">
          <!--Name-->
          <label for="" class="required">Name</label>
          <input id="Field25" name="Field25" type="text" required>

          <!--Job Title-->
          <label for="" class="required">Job Title</label>
          <input id="Field9" name="Field9" type="text" required>

          <!--Company-->
          <label for="" class="required">Company</label>
          <input id="Field13" name="Field13" type="text" required>
        </div>

        <div class="columns five offset-one">
          <!--Email-->
          <label for="" class="required">Email</label>
          <input id="Field3" name= "Field3" type="text" required>

          <!--Phone Number-->
          <label for="" class="required">Phone number</label>
          <input id="Field12" name= "Field12" type="text" required>
        </div>
      </div>

      <div class="application-section shared-line">
        <div class="columns five offset-one">

          <!--Track-->
          <label class="required" for="">Track</label>
          <select id="Field15" name="Field15" required>
            <option selected disabled hidden value=''></option>
            <option value="Strategy">Strategy</option>
            <option value="Culture">Culture</option>
            <option value="Action">Action</option>
            <option value="Develop">Develop</option>
            <option value="NotSure">I'm not sure</option>
          </select>

          <!--Session Title-->
          <label for="" class="required">Session Title</label>
          <input id="Field18" name="Field18" type="text" required>
        </div>

        <div class="columns five offset-one">
          <!--Additional Speakers-->
          <label for="">Additional Speakers</label>
          <textarea id="Field19" name="Field19"></textarea>
        </div>
      </div>


      <div class="application-section">
        <div class="textarea-container columns ten offset-one">

          <!--Session Abstract-->
          <label class="required" for="">Session Abstract</label>
          <textarea id="Field22" name="Field22" required></textarea>
        </div>

        <div class="shared-line">
          <div class="select-container columns five offset-one">

            <!--Audience Type-->
            <label class="required" for="">Audience Type (e.g. Marketer)</label>
            <select id="Field23" name="Field23" required>
              <option selected disabled hidden value=''></option>
              <option value="Marketers">Marketers</option>
              <option value="Developers">Developers</option>
              <option value="Product">Product</option>
              <option value="Everyone">Everyone</option>
            </select>
          </div>

          <div class="select-container columns five offset-one">

            <!--Level-->
            <label class="required" for="">Level</label>
            <select id="Field27" name="Field27" required>
              <option selected disabled hidden value=''></option>
              <option value="Beginner">Beginner</option>
              <option value="Intermediate">Intermediate</option>
              <option value="Advanced">Advanced</option>
              <option value="Everyone">Everyone</option>
            </select>
          </div>
        </div>
      </div>

      <div class="application-section">
        <div class="textarea-container columns ten offset-one">

          <!--Previous Talks-->
          <label class="required" for="">Examples of previous speaking engagement(s)</label>
          <textarea id="Field28" name="Field28"></textarea>
        </div>
      </div>

      <div class="hidden">
        <label for="comment">Do Not Fill This Out</label>
        <textarea name="comment" id="comment" rows="1" cols="1"></textarea>
        <input type="hidden" id="idstamp" name="idstamp" value="zjItgiPW8JAmJOBwwdI6Jygm4ermRhFuyHM51zFikLw=" />
      </div>

      <div class="options">
        <p class="error-hide">Invalid Input</p>
      </div>
      <div class="button-container">
        <button type="submit" class="submit-button">
          <span class="sbmt-btn-text">Submit</span>
          <span class="sbmt-btn-icon"></span>
        </button>
      </div>
    </form>

  </section><!-- /.call-for-sponsors -->
</div><!-- /.row-->
